<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Flatmatez.Views.GroupSetup.GroupSetupPage">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="200" />
		</Grid.RowDefinitions>

		<Label Text="You're not a member of a group yet" 
			   VerticalOptions="Center" 
			   HorizontalOptions="Center" 
			   Grid.Row="0" 
			   FontSize="Large"/>

		<Label Text="Either start a new group or join an existing one" 
			   VerticalOptions="Center" 
			   HorizontalOptions="Center" 
			   Grid.Row="0" 
			   FontSize="Large"/>

		<Button Text="New Group" 
				Clicked="OnNewClicked" 
				HorizontalOptions="CenterAndExpand"
				VerticalOptions="Center"
				WidthRequest="240"
				HeightRequest="50"
				Padding="2,2,2,2"
				Grid.Row="1">
		</Button>

		<Label Text="Enter Group Id" FontSize="Large" />
		<Entry Text="{Binding GroupId}" FontSize="Large" MaxLength="36" />
		<Button Text="Join Group" 
				Clicked="OnJoinClicked" 
				HorizontalOptions="CenterAndExpand"
				VerticalOptions="Center"
				WidthRequest="240"
				HeightRequest="50"
				Padding="2,2,2,2"
				Grid.Row="1">
		</Button>
	</Grid>
</ContentPage>